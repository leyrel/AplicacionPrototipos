@model Prototipos.Models.ViewModels.EditarProyectoView

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Edición del proyecto";
}

<div class="title">
    <h1>@ViewBag.Title</h1>
    <h2><i>@ViewBag.Message</i></h2>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(m => m.ProyectoActual.IdPrototipo)
        @Html.HiddenFor(m => m.ProyectoActual.FechaCreacion)
        @Html.HiddenFor(m => m.ProyectoActual.IdUsuarioCreador)
        @Html.HiddenFor(m => m.ProyectoActual.Estado)
        @Html.HiddenFor(m => m.ProyectoActual.FechaCierre)
        @Html.HiddenFor(m => m.ProyectoActual.IdUsuarioCierre)
        @Html.HiddenFor(m => m.ProyectoActual.Cierre)

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaCreacion)
        </div>
        <div class="editor-ali">
            @Html.DisplayFor(model => model.ProyectoActual.FechaCreacion, "ShortDateTime")
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.IdUsuarioCreador)
        </div>
        <div class="editor-ali">
            @ViewBag.usCreador
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proyecto)
        </div>
        <div><i>Introducir nombre del proyecto</i></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proyecto)
            @Html.ValidationMessageFor(model => model.Proyecto)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div><i>Introducir descripción del proyecto</i></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Responsable)
        </div>
        <div><i>Introducir nombre del responsable de I+D del proyecto</i></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Responsable, "ResponsableDropDown")
            @Html.ValidationMessageFor(model => model.Responsable)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Configuracion)
        </div>
        <div><i>Introducir la configuración inicial del montaje del prototipo</i></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Configuracion)
            @Html.ValidationMessageFor(model => model.Configuracion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Observaciones)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Observaciones)
            @Html.ValidationMessageFor(model => model.Observaciones)
        </div>
        <br />
        <p>
            <input type="submit" value="Editar" />
        </p>
    </fieldset>
}
<br />
<br />
<h5>
    @Html.ActionLink("Ir a principal", "Index")
    <span class="float-right">
        @Html.ActionLink("Atrás a gestión", "Gestion")
    </span>
</h5>